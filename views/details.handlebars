{{> navbar user }}


<div class="container">
    {{log datac}}
    {{!-- {{#each datac}} --}}
    {{#if datac.cityName}}
    <div class="jumbotron">
        <div class="heroImage">
            <div class="heroContents">
                <h4 class="display-6">{{datac.cityName}}</h4>
            </div>
        </div>
    </div>
    {{/if}}
    {{!-- {{/each}} --}}

    <div class="row justify-content-center" style="padding-top: 20px;">
        <div class="col-md text center">
            <div class="card text-center">
                <div class="card-header bg-secondary">
                    <h5 class="card-title text-white text-center">Jot down any thoughts or observations</h5>
                </div>
                <div class="card-body bg-secondary text-white">
                    <h6>Notes</h6>
                    <hr>
                    <p>Note Title</p>
                    <div class="row justify-content-center">
                        
                        <input type="text" name="" id="title">
                    </div>
                    <br>
                    <div class="row justify-content-center">
                        <textarea class="form-control z-depth-1" rows="3" id="note" placeholder="Enter note"></textarea>
                    </div>
                    <br>
                    <div class="row justify-content-center">
                        <button class="btn btn-success" onclick="saveNote()">Save</button>
                    </div>
                    <br>
                </div>
                <div class="card-footer text-muted bg-secondary">
                </div>
            </div>

        </div>
    </div>
    <br>


    {{!-- {{#each note}}
    {{#if note.title}} --}}

    <div class="row justify-content-center">
        <div class="card-body text-center bg-secondary">
            <h5 class="card-title text-white">Saved Notes</h5>
            <hr>
                {{#each datac.Notes}}
                {{#if this.dataValues.title}}
            
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><p>Note Title:</p> {{this.dataValues.title}} </li>
                            <li class="list-group-item"> {{this.dataValues.body}} </li>
                        </ul>
                        <br>
                
                {{/if}}
                {{/each}}
        </div>
    </div>

    {{!-- {{/if}}
    {{/each}} --}}



    <button id="upload_widget">Upload photo!</button>

    <div class="slick">
        <div><img src=""></div>
    </div>
</div>


