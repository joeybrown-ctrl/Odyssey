{{> navbar user }}


<div class="container">
    {{log datac}}
    {{#each datac}}
    {{#if cityName}}
    <div class="jumbotron">
        <div class="heroImage">
            <div class="heroContents">
                <h4 class="display-6">{{cityName}}</h4>
            </div>
        </div>
    </div>
    {{/if}}
    {{/each}}

    <div class="row justify-content-center" style="padding-top: 20px;">
        <div class="col-md text center">
            <div class="card text-center">
                <div class="card-header bg-secondary">
                    <h5 class="card-title text-white text-center">Jot down any thoughts or observations</h5>
                </div>
                <div class="card-body bg-secondary text-white">
                    <h6>Notes</h6>
                    <hr>
                    <p>Note Title</p>
                    <div class="row justify-content-center">
                        
                        <input type="text" name="" id="title">
                    </div>
                    <br>
                    <div class="row justify-content-center">
                        <textarea class="form-control z-depth-1" rows="3" id="note" placeholder="Enter note"></textarea>
                    </div>
                    <br>
                    <div class="row justify-content-center">
                        <button class="btn btn-success" onclick="saveNote()">Save</button>
                    </div>
                    <br>
                </div>
                <div class="card-footer text-muted bg-secondary">
                </div>
            </div>
            
        </div>
    </div>
    <br>

    <div class="row justify-content-center">
        <div class="card-body text-center bg-secondary">
            <h5 class="card-title text-white">Saved Notes</h5>
            <hr>
                {{#each note}}
                {{#if dataValues.title}}
            
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><p>Note Title:</p> {{dataValues.title}} </li>
                            <li class="list-group-item"> {{dataValues.body}} </li>
                        </ul>
                        <br>
                
                {{/if}}
                {{/each}}
        </div>
    </div>



</div>



<script>
    function saveNote() {
        const items = window.location.href.split('/')
        const id = +items[items.length - 1]
        console.log(id)
        const note = document.getElementById("note").value
        const title = document.getElementById("title").value
        $.get('/api/notes/' + id).then(data => console.log(data))
        $.post('/api/notes', { title, body: note, id }).then(data => console.log(data))
    }

</script>